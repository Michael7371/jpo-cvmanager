  "version": "0.2.0",
  "configurations": [
    {
      "command": "npm start",
      "name": "Launch web app",
      "request": "launch",
      "cwd": "${workspaceFolder}/webapp",
      "type": "node-terminal"
    },
    {
      "name": "Python: Flask",
      "type": "python",
      "request": "launch",
      "stopOnEntry": false,
      "program": "${workspaceRoot}/api/src/main.py",
      "env": {
        "FLASK_APP": "${workspaceRoot}/api/src/main.py"
      },
      "args": ["run"],
      "envFile": "${workspaceRoot}/api/.env",
      "preLaunchTask": "build-python-api"
    }
  ]
}
